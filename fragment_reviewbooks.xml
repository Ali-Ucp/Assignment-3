<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenreSelection"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:id="@+id/headings"
        android:background="@drawable/gradientpurplebluenocorner"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/heading"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/loginpagelogo"
            >

            <ImageButton
                android:id="@+id/arrowback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:src="@drawable/baseline_arrow_back_24"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                android:backgroundTint="#00FFFFFF"
                ></ImageButton>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/choosegenre"
                android:textSize="20sp"
                android:padding="10dp"
                android:text="Rate books you've Read"
                android:gravity="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textColor="@color/white"
                ></TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The more books you rate , the better your recommendations will be."
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="serif"
            android:padding="10dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>